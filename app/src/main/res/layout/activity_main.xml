<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <FrameLayout
      android:id="@+id/framelayout"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.camera.view.PreviewView>

    <util.GraphicOverlay
        android:id="@+id/graphicOverlay_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


  </FrameLayout>


  <ImageView
      android:id="@+id/eyeDangerContainer"
      android:layout_width="170dp"
      android:layout_height="150dp"
      android:layout_margin="30dp"
      android:background="@drawable/ic_eyealert"
      android:padding="10dp"
      android:visibility="invisible"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/framelayout" />

  <ImageView
      android:id="@+id/yawnDangerContainer"
      android:layout_width="170dp"
      android:layout_height="150dp"
      android:layout_margin="30dp"
      android:background="@drawable/ic_yawnalert"
      android:padding="10dp"
      android:visibility="invisible"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/eyeDangerContainer" />






  <EditText
      android:id="@+id/ElapsedTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="40dp"
      android:background="@drawable/bgcomponent"
      android:padding="7dp"
      android:textColor="#1C3879"
      android:textSize="20dp"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/framelayout" />


  <LinearLayout
      android:id="@+id/linearEye"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
      android:gravity="center_vertical"
      app:layout_constraintBottom_toTopOf="@+id/linearMouth">

    <ImageView
        android:id="@+id/eyeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:background="@drawable/borderimage"
        android:visibility="invisible"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/statusEyeIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/bgcomponent"
        android:visibility="invisible"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/ScoreEye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/bgcomponent"
        android:padding="7dp"
        android:textColor="#1C3879"
        android:textSize="20dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent" />

  </LinearLayout>

  <LinearLayout
      android:id="@+id/linearMouth"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="@+id/framelayout"
      android:layout_marginBottom="80dp"
      android:gravity="center_vertical">
    <ImageView
        android:id="@+id/mouthImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:background="@drawable/borderimage"
        android:visibility="invisible"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/statusMouthIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/bgcomponent"
        android:visibility="invisible"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/ScoreMouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/bgcomponent"
        android:padding="7dp"
        android:textColor="#1C3879"
        android:visibility="invisible"
        android:textSize="20dp" />

  </LinearLayout>



  <com.google.android.material.switchmaterial.SwitchMaterial
      android:id="@+id/debugButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/bgcomponent"
      android:layout_marginEnd="40dp"
      android:layout_marginBottom="40dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
    />



</androidx.constraintlayout.widget.ConstraintLayout>